# Navigation
alias -- -='cd -'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Docker
alias d='docker'
alias dc='docker compose'
alias dprune='docker system prune --force'
alias dps='docker ps --all'
alias drun='docker run --interactive --tty --rm'
alias dcrun='docker compose run --rm'
alias -- drun.='drun --volume=${PWD}:/mnt/host'

# Git
alias g='git'
alias ga='git a'
alias ga.='git a .'
alias gb='git b'
alias gc='git c'
alias gcb='git cb'
alias gcd='git cd'
alias gcm='git cm'
alias gco='git co'
alias gd='git d'
alias gdc='git dc'
alias gfa='git fa'
alias ggp='git gp'
alias ggu='git gu'
alias glo='git lo'
alias glop='git lo --patch'
alias gm='git m'
alias grh='git rh'
alias grhh='git rhh'
alias gst='git st'
alias gsta='git sta'
alias gstl='git stl'
alias gstp='git stp'
alias gsts='git sts'

# Kitty
[ ! -z "${KITTY_WINDOW_ID:+X}" ] && {
  command -v kitty >/dev/null && alias icat='kitty +kitten icat'
  command -v rg >/dev/null && alias rg='rg --hyperlink-format=kitty'
}

# Node
command -v npm >/dev/null && {
  alias npmD='npm install --save-dev'
  alias npmS='npm install --save'
  alias npmR='rm --force --recursive node_modules; npm install'
}

command -v pnpm >/dev/null && {
  alias pnpmD='pnpm add --save-dev'
  alias pnpmS='pnpm add --save-prod'
  alias pnpmR='pnpm --recursive exec rm --force --recursive node_modules; rm --force --recursive node_modules; pnpm install'
}

# Screen
command -v screen >/dev/null && {
  alias s='screen'
  alias sa='screen -R'
  alias sls='screen -list'
}

# Vim
command -v nvim >/dev/null && {
  alias v='nvim'
  alias vup='nvim --headless +sleep +DepsUpdate! +TSUpdateSync +MasonUpdate +quitall'
  alias vv='nvim -u NONE'
} || {
  alias v='vim'
  alias vv='vim -u NONE'
}

# Zellij
command -v zellij >/dev/null && {
  alias zj='zellij'
  alias za='zellij attach --create'
  alias zls='zellij list-sessions'
  alias zks='zellij kill-all-sessions'
}

# Miscellaneous
command -v bat >/dev/null && alias c='bat' || alias c='cat'
alias ducks='du -k --summarize -- * | sort --numeric-sort --reverse | head'
alias l='ls -l'
alias ll='ls --almost-all -l'
alias ls='ls --color=auto --classify --group-directories-first --human-readable --hyperlink=auto --literal'

# macOS
if [[ $OSTYPE == "darwin"* ]]; then
  alias bubu='brew update && brew outdated && brew upgrade && brew cleanup'
  alias clean='rg --null --files --no-ignore-vcs --glob "*.DS_Store" $HOME/ | xargs -0 rm --'
fi

# Functions
dco() { if [ -n "$1" ]; then if [ "$1" = "default" ]; then unset DOCKER_CONTEXT; else export DOCKER_CONTEXT="$1"; fi; else docker context list; fi; }
if ! command -v fd >/dev/null && command -v rg >/dev/null; then
  fd() { if [ -n "$1" ]; then rg --files --hidden --glob "!{.git,node_modules}/" "${2:-.}" | rg "$1"; fi; }
fi
myip() { curl --header "Accept: application/json" "https://ipinfo.io/$@"; }
